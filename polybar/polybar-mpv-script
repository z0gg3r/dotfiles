#!/bin/sh

FILE="$(echo '{ "command": ["get_property", "path"] }' | socat - /tmp/mpv.sock | jq .data | sed 's|"||g')"

get_artist()
{
	vorbiscomment -l "$FILE" | grep -i ARTIST | cut -d= -f2
}

get_title()
{
	vorbiscomment -l "$FILE" | grep -i TITLE | cut -d= -f2
}

get_duration()
{
	time_spent="$(polybar-mpv-time-pos)"
	time_left="$(polybar-mpv-duration)"
	full_time="$((time_spent + time_left))"
	printf '%02d:%02d/%02d:%02d' $((time_spent%3600/60)) $((time_spent%60)) $((full_time%3600/60)) $((full_time%60))
}

get_output()
{
	printf 'ðŸŽµ %b by %b [%b]' "$(get_title)" "$(get_artist)" "$(get_duration)"
}

if ! pgrep -x mpv > /dev/null 2> /dev/null; then exit; fi # printf '\n' ; fi
[ -z "$FILE" ] && printf '\n' && exit
get_output

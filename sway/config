input "type:keyboard" {
	xkb_layout us
	xkb_options srvrkeys:none
}

# seat seat0 xcursor_theme Bibata-Modern-Ice
seat seat0 xcursor_theme capitaine-cursors


bindsym $mod+w exec $browser
bindsym $mod+p exec shopfox
bindsym $mod+u exec /opt/google/chrome/chrome
bindsym $mod+Return exec $term
bindsym $mod+Shift+w exec wallpaper_setter.sh
bindsym $mod+c exec unicode.sh
bindsym $mod+e exec emoji.sh
bindsym $mod+b exec bookmarks.sh
bindsym $mod+a exec abook.sh
bindsym $mod+l exec swaylock -F -e -i $HOME/.config/wallpapers/wallpaper.png
bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+e exec swaymsg exit
bindsym $mod+Shift+c reload
bindsym Print exec grim -g "$(slurp)" -o $HOME/Pictures/screenshots
bindsym Shift+Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')

floating_modifier $mod normal

bindsym $mod+1 exec sway-workspaces.sh switch 1
bindsym $mod+2 exec sway-workspaces.sh switch 2
bindsym $mod+3 exec sway-workspaces.sh switch 3
bindsym $mod+4 exec sway-workspaces.sh switch 4
bindsym $mod+5 exec sway-workspaces.sh switch 5
bindsym $mod+6 exec sway-workspaces.sh switch 6
bindsym $mod+7 exec sway-workspaces.sh switch 7
bindsym $mod+8 exec sway-workspaces.sh switch 8
bindsym $mod+9 exec sway-workspaces.sh switch 9
bindsym $mod+0 exec sway-workspaces.sh switch 10
bindsym $mod+Shift+1 exec sway-workspaces.sh move 1
bindsym $mod+Shift+2 exec sway-workspaces.sh move 2
bindsym $mod+Shift+3 exec sway-workspaces.sh move 3
bindsym $mod+Shift+4 exec sway-workspaces.sh move 4
bindsym $mod+Shift+5 exec sway-workspaces.sh move 5
bindsym $mod+Shift+6 exec sway-workspaces.sh move 6
bindsym $mod+Shift+7 exec sway-workspaces.sh move 7
bindsym $mod+Shift+8 exec sway-workspaces.sh move 8
bindsym $mod+Shift+9 exec sway-workspaces.sh move 9
bindsym $mod+Shift+0 exec sway-workspaces.sh move 10
bindsym $mod+o move window to output right; focus output right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+v splitv

bindsym $mod+Alt+s layout stacking
bindsym $mod+Alt+w layout tabbed
bindsym $mod+Alt+e layout toggle split

bindsym $mod+f fullscreen

bindsym $mod+Shift+space floating toggle

bindsym $mod+Alt+space focus mode_toggle

mode "resize" {
	bindsym $left resize shrink width 10px
	bindsym $down resize grow height 10px
	bindsym $up resize shrink height 10px
	bindsym $right resize grow width 10px

	bindsym Left resize shrink width 10px
	bindsym Down resize grow height 10px
	bindsym Up resize shrink height 10px
	bindsym Right resize grow width 10px

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bar {
	position top
	swaybar_command waybar-launcher
}

exec "$HOME/.config/autostart/00-Autostart.sh"

exec ibus start --type wayland
exec wlsunset -g 0.85 -T 4001 -t 4000
exec bgctl "${HOME}/.config/wallpapers/wallpaper.png"
exec dbus-update-activation-environment WAYLAND_DISPLAY DISPLAY XDG_CURRENT_DESKTOP SWAYSOCK I3SOCK XCURSOR_SIZE XCURSOR_THEME

include /etc/sway/config.d/*

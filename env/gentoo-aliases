alias search="emerge --search"
alias updates="doas emerge -autUDNp --with-bdeps=y @world"
alias update="doas emerge -autUDN --with-bdeps=y @world"
alias rebuild="doas emerge -atv @module-rebuild"
alias cleanup="doas emerge -atc"
alias uses="equery uses"
alias last_sync_was="printf 'last\n'; cat /var/db/repos/gentoo/metadata/timestamp.chk; printf 'now\n'; /bin/date -uR"

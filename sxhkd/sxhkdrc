#
# wm independent hotkeys
#

super + Return
	sakura -d /home/zocki

super + d
	rofi -show run

super + b
	dash /home/zocki/.config/scripts/bookmarks.sh

super + c
	dash /home/zocki/.config/scripts/unicode.sh

super + a
	dash /home/zocki/.config/scripts/abook.sh

super + shift + e
	dash /home/zocki/.config/scripts/emoji.sh

super + w
	librewolf

super + l
	i3lock -n -t -i /home/zocki/.wallpaper.png

super + Escape
	pkill -USR1 -x sxhkd

super + shift + Escape
	dash "$HOME/.config/polybar/launch.sh" > /dev/null 2> /dev/null & 

super + r
	dash /home/zocki/.config/scripts/run.sh

XF86AudioRaiseVolume
	pamixer -i 1

XF86AudioLowerVolume
	pamixer -d 1

XF86AudioMute
	pamixer -t

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close and kill
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus or send to the given desktop
super + {0-9}
	/home/zocki/.config/scripts/bspwm_desktop_switcher.sh "{0-9}"

super + shift + {0-9}
	/home/zocki/.config/scripts/bspwm_desktop_mover.sh "{0-9}"

super + o
	bspc node -m prev --follow
